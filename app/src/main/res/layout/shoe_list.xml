<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="Shoe_List_Data"
            type="com.example.shoestore.data.Shoe_List_Data" />
    </data>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearlayout"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    app:srcCompat="@android:drawable/ic_input_add"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/shoeName_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={Shoe_List_Data.shoe_name}" />

                <TextView
                    android:id="@+id/shoeSize_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={Shoe_List_Data.shoe_size}" />

                <TextView
                    android:id="@+id/shoeDescription_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={Shoe_List_Data.shoe_description}" />

                <TextView
                    android:id="@+id/shoeCompany_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={Shoe_List_Data.shoe_company}" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
